<h3 class="page-header">Edit Experiment</h3>


<%= form_for [@experiment.proposal, @experiment] do |f| %>
  <p>
    <%= f.label :status %><br>
    <%= f.select(:status, options_for_select([['Open', 'Open'], ['Closed', 'Closed']])) %>
  </p>
  <p>
    <%= f.label :materials %><br>
    <%= f.text_area :materials, size: "100x10" %>
  </p>
  <p>
    <%= f.label :procedure %><br>
    <%= f.text_area :procedure, size: "100x10" %>
  </p>
  <p>
    <%= f.label :conclusion %><br>
    <%= f.text_area :conclusion, size: "100x10",:class=>"conclusion" %>
  </p>
  <p>
    <%= f.submit "Update Experiment", data: { confirm: "Please Confirm Submission. Adding a conclusion will close the experiment"} %>
  </p>
<% end %>


