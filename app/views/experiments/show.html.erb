
<h2><%= @experiment.proposal.name %></h2>
<h5>Experiment by: <%= @experiment.experimenter.fullname %></h5>
<p>Hypothesis: <%= @experiment.proposal.hypothesis %></p>

<p>Status: <%= @experiment.status %></p>
<p>Materials: <%= @experiment.materials %></p>
<p>Procedure: <%= @experiment.procedure %></p>
<p>Conclusion:
  <% if @experiment.conclusion %>
    <%= @experiment.conclusion %>
  <% else %>
    Experiment ongoing
  <% end %>
</p>

<% if current_user == @experiment.experimenter && @experiment.status != 'Closed' %>
  <%= link_to "Edit Experiment Details", edit_proposal_experiment_path(@experiment.proposal, @experiment) %>
<% end %>

<h3> Observations </h3>
<%= render @experiment.observations %>
<% if current_user == @experiment.experimenter && @experiment.status != 'Closed' %>
  <%= render partial: '/observations/form' , locals: {experiment: @experiment } %>
<% end %>




<h3> Comments </h3>
<%= render @experiment.comments %>
<%= render partial: '/comments/form' , locals: {commentable_type: "Experiment", commentable_id: @experiment.id } %>

<%= link_to "<< Proposal", proposal_path(@experiment.proposal) %>
